{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/screens/*": ["./screens/*"],
      "@workspaceui/storybook": ["../storybook/src"],
      "@workspaceui/storybook/*": ["../storybook/src/*"],
      "@workspaceui/componentlibrary/*": ["../ComponentLibrary/src/*"],
      "@workspaceui/componentlibrary": ["../ComponentLibrary/src"],
      "@workspaceui/etendohookbinder/*": ["../EtendoHookBinder/src/*"],
      "@workspaceui/etendohookbinder": ["../EtendoHookBinder/src"]
    },
    "typeRoots": ["../ComponentLibrary/node_modules/@types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../ComponentLibrary/src/types/svgr.d.ts",
    "../ComponentLibrary/src/types/theme.d.ts"
  ],
  "exclude": ["node_modules"]
}
