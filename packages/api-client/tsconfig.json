{
  "compilerOptions": {
    "target": "ES5", // Target ES5 for wide compatibility
    "module": "ESNext", // Leave module setting flexible for overrides
    "declaration": true, // Generate .d.ts declaration files
    "declarationDir": "./dist/types", // Output directory for .d.ts files
    "rootDir": "./src", // Root directory of the source files
    "outDir": "./dist", // Output directory for transpiled files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Interop for CommonJS modules
    "skipLibCheck": true, // Skip type checks for libraries for faster builds
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "listEmittedFiles": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "baseUrl": "",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src", "src/**/__tests__/*.ts", "src/**/__tests__/*.tsx"],
  "exclude": ["node_modules"]
}
