{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@workspaceui/storybook": ["../storybook/src"],
      "@workspaceui/storybook/*": ["../storybook/src/*"],
      "@workspaceui/componentlibrary/*": ["../ComponentLibrary/src/*"],
      "@workspaceui/componentlibrary": ["../ComponentLibrary/src"],
      "@workspaceui/etendohookbinder/*": ["../EtendoHookBinder/src/*"],
      "@workspaceui/etendohookbinder": ["../EtendoHookBinder/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "dist"]
}
