{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "preserveSymlinks": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,

    "target": "ES5",                    // Target ES5 for wide compatibility
    "module": "ESNext",                 // Leave module setting flexible for overrides
    "declaration": true,                // Generate .d.ts declaration files
    "declarationDir": "./dist/types",   // Output directory for .d.ts files
    "outDir": "./dist",                 // Output directory for transpiled files
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
